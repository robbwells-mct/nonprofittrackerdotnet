@model NonprofitTracker.Models.Donation
@using NonprofitTracker.Models

@{
    ViewData["Title"] = "Create Donation";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">
        <i class="bi bi-plus-circle text-primary me-2"></i>Create Donation
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Donation Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ConstituentId" class="form-label">Donor</label>
                                <select asp-for="ConstituentId" class="form-select" asp-items="ViewBag.ConstituentId">
                                    <option value="">Select a donor...</option>
                                </select>
                                <span asp-validation-for="ConstituentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CampaignId" class="form-label">Campaign</label>
                                <select asp-for="CampaignId" class="form-select" asp-items="ViewBag.CampaignId">
                                    <option value="">Select a campaign...</option>
                                </select>
                                <span asp-validation-for="CampaignId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label">Amount</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DonationDate" class="form-label">Donation Date</label>
                                <input asp-for="DonationDate" class="form-control" type="date" />
                                <span asp-validation-for="DonationDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="GiftType" class="form-label">Gift Type</label>
                                <select asp-for="GiftType" class="form-select" asp-items="Html.GetEnumSelectList<GiftType>()">
                                    <option value="">Select gift type...</option>
                                </select>
                                <span asp-validation-for="GiftType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DonationType" class="form-label">Donation Type</label>
                                <select asp-for="DonationType" class="form-select" asp-items="Html.GetEnumSelectList<DonationType>()">
                                    <option value="">Select donation type...</option>
                                </select>
                                <span asp-validation-for="DonationType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AcknowledgmentStatus" class="form-label">Acknowledgment Status</label>
                                <select asp-for="AcknowledgmentStatus" class="form-select" asp-items="Html.GetEnumSelectList<AcknowledgmentStatus>()">
                                    <option value="">Select status...</option>
                                </select>
                                <span asp-validation-for="AcknowledgmentStatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IsRecurring" class="form-label">Is Recurring</label>
                                <div class="form-check">
                                    <input asp-for="IsRecurring" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" for="IsRecurring">
                                        This is a recurring donation
                                    </label>
                                </div>
                                <span asp-validation-for="IsRecurring" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes about this donation..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Create Donation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Tips</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small text-muted">
                    <li><i class="bi bi-info-circle me-1"></i>Select the donor from the dropdown list</li>
                    <li><i class="bi bi-info-circle me-1"></i>Choose the appropriate campaign if applicable</li>
                    <li><i class="bi bi-info-circle me-1"></i>Enter the exact donation amount</li>
                    <li><i class="bi bi-info-circle me-1"></i>Set acknowledgment status for tracking</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
